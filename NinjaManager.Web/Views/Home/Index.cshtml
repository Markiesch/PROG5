@{
    ViewData["Title"] = "Selecteer ninja";
}

<header class="container header">
    <h1>NinjaManager</h1>
    <nav>
        <a class="btn" href="#">HOME</a>
        <a class="btn btn-secondary" asp-controller="Editor" asp-action="Index">EDITOR</a>
    </nav>
</header>

<div class="container home">
    @foreach (var ninja in Model)
    {
        <a asp-controller="Ninja" asp-action="Index" asp-route-id="@ninja.Id" style="display: block">

            <div class="ninja-card">
                <h2 class="ninja-name">@ninja.Name</h2>
                <img class="ninja" src="/Image/Ninjafoto.png" alt="Ninja">
                <div class="ninja-card-footer">
                    <div class="ninja-resources">
                        <div>
                            <span>
                                <img src="/Image/element/coins.png" alt="blue pearl">@ninja.Currency
                            </span>
                            <span>
                                <img src="/Image/element/gearvalue.png" alt="blue pearl">@ninja.GearValue
                            </span>
                        </div>
                        <div>
                            <span>
                                <img src="/Image/pearl_01c.png" alt="red pearl">@ninja.TotalStrength
                            </span>
                            <span>
                                <img src="/Image/pearl_01b.png" alt="blue pearl">@ninja.TotalIntelligence
                            </span>
                            <span>
                                <img src="/Image/pearl_01d.png" alt="green pearl">@ninja.TotalAgility
                            </span>
                        </div>
                    </div>
                    <div class="ninja-card-actions">
                        <a asp-controller="Ninja" asp-action="Index" asp-route-id="@ninja.Id" class="btn btn-secondary">SELECT</a>
                        <a asp-controller="Ninja" asp-action="Delete" asp-route-id="@ninja.Id" class="btn btn-outlined">DELETE</a>
                        <a asp-controller="Ninja" asp-action="Reset" asp-route-id="@ninja.Id" class="btn btn-outlined">RESET</a>
                    </div>
                </div>
            </div>
        </a>
    }

    <div class="ninja-card ninja-card-empty">
        <h2 class="ninja-name">NEW NINJA</h2>
        <img class="ninja" src="/Image/Ninjafoto.png" alt="Ninja">
        <div class="ninja-card-footer">
            <div class="ninja-card-actions">
                <a id="open-modal-btn" class="btn btn-secondary">ADD NINJA</a>
            </div>
        </div>
    </div>
</div>

<div id="modal">
    <div class="modal-content">
        <h2>New ninja</h2>
        <form asp-controller="Ninja" asp-action="CreateNinja" method="post">
            <label for="Name">Name:</label>
            <input type="text" id="Name" name="Name" required/>

            <button type="submit" class="btn">CREATE NINJA</button>
        </form>
    </div>
</div>