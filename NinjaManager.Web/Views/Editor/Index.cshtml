@model EditorViewModel

@{
    ViewData["Title"] = "Editor";
}

<header class="container header">
    <h1>NinjaManager</h1>
    <nav>
        <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">HOME</a>
        <a class="btn" href="#">EDITOR</a>
    </nav>
</header>

<div class="container shop-container">
    <div class="card-container new-card">
        <div class="card card-iron">
            <p>NEW ITEM</p>
            <div class="action-container">
                <a class="btn" asp-action="Create">CREATE</a>
            </div>
        </div>
    </div>

    @foreach (var item in Model.Equipments)
    {
        <div class="card-container">
            <div class="card @item.Rarity.ToLower()">
                <div class="price-container">
                    <img class="price-icon" src="/Image/element/coins.png" alt=""/>
                    <p>@item.Price</p>
                </div>
                <img class="cover-image" src="@("/Image/" + item.Img + ".png")" alt="@item.Name"/>
                <div class="details-container">
                    <p class="item-name">@item.Name</p>
                    <div class="stats-container">
                        <div class="attribute">
                            <img class="dot" src="/Image/pearl_01c.png" alt="Red Dot"/>
                            <div>@item.Strength</div>
                        </div>
                        <div class="attribute">
                            <img class="dot" src="/Image/pearl_01b.png" alt="Blue Dot"/>
                            <div>@item.Intelligence</div>
                        </div>
                        <div class="attribute">
                            <img class="dot" src="/Image/pearl_01d.png" alt="Green Dot"/>
                            <div>@item.Agility</div>
                        </div>
                    </div>
                    <div class="action-container">
                        <a style="padding-inline: 0; text-align: center" class="btn btn-secondary rounded-0" asp-action="Update" asp-route-id="@item.Id">UPDATE</a>
                        <a style="padding-inline: 0; text-align: center" class="btn btn-secondary rounded-0" asp-action="Delete">DELETE</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>