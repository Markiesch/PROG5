<header class="ninja-manager-header">
    <h1>NinjaManager</h1>
    <nav>
        <button class="btn">HOME</button>
        <button class="btn">NINJA</button>
        <button class="btn">SHOP</button>
    </nav>
</header>

<div class="ninja-shop">
    <div class="ninja-items-grid">
        <div class="ninja-item mythic">
            <h2>MYTHIC HELMET</h2>
            <img src="/Image/helmet_01e.png" alt="Mythic Helmet">
            <div class="ninja-cost">
                <span><img src="/Image/pearl_01a.png" alt="red pearl"> 300</span>
                <span><img src="/Image/pearl_01b.png" alt="green pearl"> 300</span>
                <span><img src="/Image/pearl_01c.png" alt="blue pearl"> 300</span>
                <span><img src="/Image/pearl_01d.png" alt="yellow pearl"> 300</span>
            </div>
        </div>
        <div class="ninja-item green">
            <h2>EMERALD NECKLACE</h2>
            <img src="/Image/necklace_03a.png" alt="Emerald Necklace">
            <div class="ninja-cost">
                <span><img src="/Image/pearl_01a.png" alt="red pearl"> 300</span>
                <span><img src="/Image/pearl_01b.png" alt="green pearl"> 300</span>
                <span><img src="/Image/pearl_01c.png" alt="blue pearl"> 300</span>
                <span><img src="/Image/pearl_01d.png" alt="yellow pearl"> 300</span>
            </div>
        </div>
        <div class="ninja-item empty">
            <h2>EMPTY</h2>
            <button class="open-shop">OPEN SHOP</button>
        </div>
        <div class="ninja-item yellow">
            <h2>GOLDEN RING</h2>
            <img src="/Image/ring_01d.png" alt="Golden Ring">
            <div class="ninja-cost">
                <span><img src="/Image/pearl_01a.png" alt="red pearl"> 300</span>
                <span><img src="/Image/pearl_01b.png" alt="green pearl"> 300</span>
                <span><img src="/Image/pearl_01c.png" alt="blue pearl"> 300</span>
                <span><img src="/Image/pearl_01d.png" alt="yellow pearl"> 300</span>
            </div>
        </div>
        <div class="ninja-item orange">
            <h2>LEATHER BOOTS</h2>
            <img src="/Image/boots_01a.png" alt="Leather Boots">
            <div class="ninja-cost">
                <span><img src="/Image/pearl_01a.png" alt="red pearl"> 300</span>
                <span><img src="/Image/pearl_01b.png" alt="green pearl"> 300</span>
                <span><img src="/Image/pearl_01c.png" alt="blue pearl"> 300</span>
                <span><img src="/Image/pearl_01d.png" alt="yellow pearl"> 300</span>
            </div>
        </div>
        <div class="ninja-item blue">
            <h2>DIAMOND GLOVES</h2>
            <img src="/Image/gloves_01c.png" alt="Diamond Gloves">
            <div class="ninja-cost">
                <span><img src="/Image/pearl_01a.png" alt="red pearl"> 300</span>
                <span><img src="/Image/pearl_01b.png" alt="green pearl"> 300</span>
                <span><img src="/Image/pearl_01c.png" alt="blue pearl"> 300</span>
                <span><img src="/Image/pearl_01d.png" alt="yellow pearl"> 300</span>
            </div>
        </div>
    </div>

    <div class="ninja-card">
        <h1>@Model.Name</h1>
        <div class="ninja-resources">
            <span><img src="/Image/pearl_01a.png" alt="red pearl"> 300</span>
            <span><img src="/Image/pearl_01b.png" alt="green pearl"> 300</span>
            <span><img src="/Image/pearl_01c.png" alt="blue pearl"> 300</span>
            <span><img src="/Image/pearl_01d.png" alt="yellow pearl"> 300</span>
        </div>
        <img class="ninja" src="/Image/Ninjafoto.png" alt="Ninja">
    </div>
</div>


