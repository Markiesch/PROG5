@model NinjaManager.Web.Models.NinjaViewModel;

@{
    ViewData["Title"] = "Ninja " + Model.Ninja.Name;
}

<header class="container ninja-manager-header">
    <h1>NinjaManager</h1>
    <nav>
        <a class="btn" href="/home">HOME</a>
        <a class="btn" href="/ninja">NINJA</a>
        <a class="btn" href="/shop">SHOP</a>
    </nav>
</header>

<div class="container ninja-shop">
    <div class="ninja-items-grid">
        @foreach (var equipment in Model.Inventory)
        {
            if (equipment == null)
            {
                <div class="ninja-item-container">

                    <div class="ninja-item empty">
                        <div class="ninja-item-img-container">
                        </div>
                        <div class="ninja-item-details">
                            <h2 class="ninja-item-name">EMPTY</h2>
                            <a class="open-shop" href="/shop">OPEN SHOP</a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="ninja-item-container">
                    <div class="ninja-item @equipment.Rarity.ToLower()">
                        <h2 class="rarity-name">@equipment.Rarity</h2>
                        <div class="ninja-item-img-container">
                            <img src="/Image/@(equipment.Img).png" alt="Mythic Helmet">
                        </div>
                        <div class="ninja-item-details">
                            <h2 class="ninja-item-name">@equipment.Name</h2>
                            <div class="ninja-item-stats">
                                <span>
                                    <img src="/Image/pearl_01c.png" alt="red pearl">@equipment.Strength
                                </span>
                                <span>
                                    <img src="/Image/pearl_01d.png" alt="green pearl">@equipment.Intelligence
                                </span>
                                <span>
                                    <img src="/Image/pearl_01b.png" alt="blue pearl">@equipment.Agility
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }

    </div>

    <div class="ninja-card">
        <h1>@Model.Ninja.Name</h1>
        <div class="ninja-resources">
            <span>
                <img src="/Image/pearl_01c.png" alt="red pearl">@Model.TotalStrength
            </span>
            <span>
                <img src="/Image/pearl_01d.png" alt="green pearl">@Model.TotalAgility
            </span>
            <span>
                <img src="/Image/pearl_01b.png" alt="blue pearl">@Model.TotalIntelligence
            </span>
            <span>
                <img src="/Image/element/coins.png" alt="blue pearl">@Model.Ninja.Currency
            </span>
        </div>
        <img class="ninja" src="/Image/Ninjafoto.png" alt="Ninja">
    </div>
</div>